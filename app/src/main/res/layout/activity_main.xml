<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D4CACA"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/tal"
        android:text="test"
        android:layout_width="match_parent"
        android:layout_height="20dp" />

    <TextView
        android:id="@+id/calculation_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:paddingLeft="16dp"
        android:paddingTop="120dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:text=""
        android:textSize="26dp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_clear"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="C"
        android:textColor="#EF5350"
        android:textSize="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/calculation_field" />

    <Button
        android:id="@+id/btn_slash"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="/"
        android:textColor="#EF5350"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@id/btn_clear"
        app:layout_constraintTop_toBottomOf="@id/calculation_field" />

    <Button
        android:id="@+id/btn_multiple"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="X"
        android:textColor="#EF5350"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_slash"
        app:layout_constraintTop_toBottomOf="@id/calculation_field" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="delete"
        android:textColor="#EF5350"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_multiple"
        app:layout_constraintTop_toBottomOf="@id/calculation_field" />

    <Button
        android:id="@+id/btn_seven"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="7"
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_clear" />

    <Button
        android:id="@+id/btn_eight"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="8"
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@id/btn_clear"
        app:layout_constraintTop_toBottomOf="@id/btn_slash" />

    <Button
        android:id="@+id/btn_nine"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="9"
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_slash"
        app:layout_constraintTop_toBottomOf="@id/btn_multiple" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="-"
        android:textColor="#EF5350"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_multiple"
        app:layout_constraintTop_toBottomOf="@+id/btn_delete" />


    <Button
        android:id="@+id/btn_four"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="4"
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_seven" />

    <Button
        android:id="@+id/btn_five"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="5"
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@id/btn_clear"
        app:layout_constraintTop_toBottomOf="@id/btn_eight" />

    <Button
        android:id="@+id/btn_six"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="6"
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_slash"
        app:layout_constraintTop_toBottomOf="@id/btn_nine" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="+"
        android:textColor="#EF5350"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_multiple"
        app:layout_constraintTop_toBottomOf="@+id/btn_minus" />

    <Button
        android:id="@+id/btn_one"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="1"
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_four" />

    <Button
        android:id="@+id/btn_two"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="2"
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@id/btn_clear"
        app:layout_constraintTop_toBottomOf="@id/btn_five" />

    <Button
        android:id="@+id/btn_three"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="3"
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_slash"
        app:layout_constraintTop_toBottomOf="@id/btn_six" />

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="92dp"
        android:layout_height="134dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="="
        android:textColor="#EF5350"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_multiple"
        app:layout_constraintTop_toBottomOf="@+id/btn_plus" />

    <Button
        android:id="@+id/btn_precent"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="%"
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_one" />

    <Button
        android:id="@+id/btn_zero"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="0"
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@id/btn_clear"
        app:layout_constraintTop_toBottomOf="@id/btn_two" />

    <Button
        android:id="@+id/btn_dot"
        android:layout_width="92dp"
        android:layout_height="66dp"
        android:layout_margin="1dp"
        android:background="#ffffff"
        android:padding="0.5dp"
        android:text="."
        android:textColor="#707070"
        android:textSize="26dp"
        app:layout_constraintLeft_toRightOf="@+id/btn_slash"
        app:layout_constraintTop_toBottomOf="@id/btn_three" />

</android.support.constraint.ConstraintLayout>